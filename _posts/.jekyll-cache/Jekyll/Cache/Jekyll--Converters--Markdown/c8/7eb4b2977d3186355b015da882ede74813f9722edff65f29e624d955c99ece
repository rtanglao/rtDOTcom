    <span class="n">output</span> <span class="o">=</span> <span class="mi">1</span> <span class="o">/</span> <span class="p">(</span><span class="mi">1</span> <span class="o">+</span> <span class="n">exp</span><span class="p">(</span><span class="o">-</span><span class="p">(</span><span class="n">dot</span><span class="p">(</span><span class="n">training_set_inputs</span><span class="p">,</span> <span class="n">synaptic_weights</span><span class="p">))))</span>
