</span><span class="n">samedatatable</span><span class="w"> </span><span class="o">&lt;-</span><span class="w"> </span><span class="n">somedatatable</span><span class="p">[</span><span class="n">order</span><span class="p">(</span><span class="o">-</span><span class="n">somedatatable</span><span class="o">$</span><span class="n">name_of_count_field</span><span class="p">),]</span><span class="w">
</span><span class="c1"># e.g. </span><span class="w">
</span><span class="n">countcolourname</span><span class="w"> </span><span class="o">&lt;-</span><span class="w"> </span><span class="n">countcolourname</span><span class="p">[</span><span class="n">order</span><span class="p">(</span><span class="o">-</span><span class="n">countcolourname</span><span class="o">$</span><span class="n">freq</span><span class="p">),]</span><span class="w">
