  </span><span class="n">title_plus_content</span><span class="w">  </span><span class="o">&lt;-</span><span class="w"> </span><span class="n">paste</span><span class="p">(</span><span class="w">
    </span><span class="n">reverse_csv</span><span class="p">[</span><span class="n">row</span><span class="p">,</span><span class="w"> </span><span class="s2">"title"</span><span class="p">],</span><span class="w">
